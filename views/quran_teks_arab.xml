<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="quran_teks_arab_list">
      <field name="name">List Quran Teks Arab</field>
      <field name="model">quranum_majid.quran_teks_arab</field>
      <field name="arch" type="xml">
        <tree>
          <field name="quran_teks_arab_id"/>
          <field name="surat"/>
          <field name="ayat"/>
          <field name="teks"/>
        </tree>
      </field>
    </record>

<!-- 

    id = fields.Integer(string='ID')
    surat = fields.Integer(string='Nomor Surat')
    ayat = fields.Integer(string='Nomor Ayat')
    teks = fields.Text(string='Teks Arab')
 -->

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="quran_teks_arab_action_window">
      <field name="name">Jendela Quran Teks Arab</field>
      <field name="res_model">quranum_majid.quran_teks_arab</field>
      <field name="view_mode">tree,form</field>
    </record>


